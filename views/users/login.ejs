<div class="d-flex flex-column align-items-center mt-2">
    <img src="/icon/ms-icon-70x70.png" width="30" height="30" class="" alt="YelpCamp Logo">
    <h2 class="">YelpCamp</h2>

    <div id="error-message" class="alert alert-danger" role="alert"></div>

    <form id="login-form" action="/users/login" method="POST">
        <label class="font-weight-bold" for="user[username]">Username</label>
        <input class="w-100 d-block mb-2" type="text" name="user[username]" placeholder="john_smith">
        <label class="font-weight-bold" for="user[password]">Password</label>
        <input class="w-100 d-block mb-2" type="password" name="user[password]" placeholder="password">
        <button class="my-3 w-100 d-block btn btn-success btn-sm">Login</button>
        <span>Don't have an account ?</span><a href="#" id="register-anchor"> Register</a>
    </form>
</div>